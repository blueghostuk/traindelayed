@{
    Layout = "~/_Layout.cshtml";
}
@using System.Web.Optimization;
@section CustomCss{
    <style type="text/css">
        body {
            padding-top: 60px;
            padding-bottom: 40px;
        }

        .sidebar-nav {
            padding: 9px 0;
        }

        .span12 {
            padding-left: 25px;
        }
    </style>
}
@section TopMenu{
    <li><a href="~/">Home</a></li>
    <li class="active"><a>Search Resuls</a></li>
}
<div class="row-fluid">
    <div class="span12">
        <div class="row alert alert-info hide" id="no-results-row">
            <strong>No Results Found</strong>
        </div>
        <div class="progress progress-striped active hide">
            <div class="bar" style="width: 100%"></div>
        </div>
        <div class="row" id="title" style="margin-top: 5px; font-size: large;" data-bind="visible: Text">
            <span data-bind="text: Text" class="stationName" style="font-weight: bold; margin-left: 5px;">
                Trains from Birmingham New Street to Five Ways
            </span>
            <hr style="margin: 5px 0px;" />
        </div>
        <div class="row">
            <table class="table table-hover table-bordered" id="origin-search-results">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>TOC</th>
                        <th colspan="3">From</th>
                        <th colspan="3">To</th>
                        <th>Delay</th>
                        <th>Web Link</th>
                    </tr>
                    <tr>
                        <th></th>
                        <th></th>
                        <th>Station</th>
                        <th>Expected</th>
                        <th>Actual</th>
                        <th>Station</th>
                        <th>Expected</th>
                        <th>Actual</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>1ZBR</td>
                        <td>LM</td>
                        <td>Birmingham New Street</td>
                        <td>10:30</td>
                        <td>10:35</td>
                        <td>Five Ways</td>
                        <td>10:33</td>
                        <td>10:40</td>
                        <td>+7</td>
                        <td><a href="http://www.londonmidland.com" target="_blank">http://www.londonmidland.com</a></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
@section FooterJs{
    <script type="text/javascript">
        var server = "@System.Configuration.ConfigurationManager.AppSettings["server"]";
        var apiPort = "@System.Configuration.ConfigurationManager.AppSettings["apiPort"]";
    </script>

    @Scripts.Render("~/bundles/search-results")
}